#!/usr/bin/env elvish

var items = [
    CreateNewMenu
    EditMenu
    FormatMenu
    GlobalMenu
]

for i [$@items] {
    sed 's/Labs/QQC2/g' $i.qml > $i"InWindow.qml"
    sed -i '/shortcut:/d' $i"InWindow.qml"
    for ii [$@items] {
        sed -i 's/'$ii'/'$ii'InWindow/g' $i"InWindow.qml"
    }
}
